@model HashTag.Presentation.Models.Auth.RegisterModel

<div id="modal-register" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Register</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <form method="post" asp-controller="Auth" asp-action="Register">
                        <div class="row">
                            <div class="form-group col-12">
                                <label asp-for="Email" class="form-control-label"></label>
                                <input asp-for="Email" class="form-control"/>
                            </div>
                            <div class="form-group col-12">
                                <label asp-for="UserName" class="form-control-label"></label>
                                <input asp-for="UserName" class="form-control"/>
                            </div>
                            <div class="form-group col-12">
                                <label asp-for="Password" class="form-control-label"></label>
                                <input asp-for="Password" type="password" class="form-control"/>
                            </div>
                            <div class="form-group col-12">
                                <label asp-for="RePassword" class="form-control-label"></label>
                                <input asp-for="RePassword" type="password" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <button type="submit" class="btn btn-block btn-outline-success">
                                    Register me!
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>