@model HashTag.Presentation.Models.Auth.SignInModel

<div id="modal-login" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Sign in</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <form asp-controller="Auth" asp-action="SignIn" method="post" asp-antiforgery="true">
                        <div class="row">
                            <div class="form-group col-12">
                                <label asp-for="NameOrEmail" class="form-control-label"></label>
                                <input asp-for="NameOrEmail" class="form-control"/>
                            </div>
                            <div class="form-group col-12">
                                <label asp-for="Password" class="form-control-label"></label>
                                <input asp-for="Password" id="SignInPassword" type="password" class="form-control"/>
                            </div>
                            <div class="form-group col-12 mb-0">
                                <label class="custom-control custom-checkbox">
                                    <input asp-for="RememberMe" class="custom-control-input"/>
                                    <span class="custom-control-indicator"></span>
                                    <label asp-for="RememberMe" class="custom-control-description"></label>
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 mb-2">
                                <button type="submit" class="btn btn-block btn-outline-primary">
                                    <span class="fa"></span> Let me in
                                </button>
                            </div>
                        </div>
                    </form>
                    <form asp-controller="Auth" asp-action="ExternalLogin" method="post">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" name="provider" value="Facebook" class="btn btn-block btn-social btn-facebook">
                                    <span class="fa fa-facebook"></span> Sign in with Facebook
                                </button>
                            </div>
                            <div class="col-6">
                                <button type="submit" name="provider" value="Google" class="btn btn-block btn-social btn-google">
                                    <span class="fa fa-google"></span> Sign in with Google
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>