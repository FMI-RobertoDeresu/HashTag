@model string
@{
    ViewBag.Title = "Profile";
}

<div ng-app="profile" ng-init="userName='@Model'">
    <div ng-view></div>
</div>

@section scripts {
    <environment names="Development">
        <script asp-append-version="true" src="~/clientapp/core/core.module.js"></script>
        <script asp-append-version="true" src="~/clientapp/core/services/communication.service.js"></script>
        <script asp-append-version="true" src="~/clientapp/core/services/photo.service.js"></script>
        <script asp-append-version="true" src="~/clientapp/core/directives/photosGrid.directive.js"></script>
        <script asp-append-version="true" src="~/clientapp/core/directives/hashtags.directive.js"></script>
        <script asp-append-version="true" src="~/clientapp/core/directives/fileButton.directive.js"></script>
        <script asp-append-version="true" src="~/clientapp/core/directives/upPhotoPreview.directive.js"></script>
        <script asp-append-version="true" src="~/clientapp/core/directives/infinitePhotosGrid.js"></script>

        <script asp-append-version="true" src="~/clientapp/profile/profile.module.js"></script>
        <script asp-append-version="true" src="~/clientapp/profile/services/profile.service.js"></script>
        <script asp-append-version="true" src="~/clientapp/profile/services/addPhotosModal.service.js"></script>
        <script asp-append-version="true" src="~/clientapp/profile/controllers/profile.controller.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script asp-append-version="true" src="~/bundles/js/ng-core.js"></script>
        <script asp-append-version="true" src="~/bundles/js/ng-profile.js"></script>
    </environment>
}