@model HashTag.Presentation.Models.Manage.SetPasswordModel

<h2 class="mt-5">Set a password in application</h2>
<p>With your username or email and this password you can sign in without social authentication.</p>
<hr/>

<form asp-controller="Manage" asp-action="SetPassword" asp-antiforgery="true">
    <input asp-for="UserId"/>
    <div class="row form-group ">
        <div class="col-4 col-xs-12">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-4 col-xs-12">
            <label asp-for="RePassword" class="control-label"></label>
            <input asp-for="RePassword" class="form-control"/>
            <span asp-validation-for="RePassword"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-success">Submit</button>
    </div>
</form>