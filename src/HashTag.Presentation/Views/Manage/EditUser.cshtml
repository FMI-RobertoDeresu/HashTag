@model HashTag.Presentation.Models.Manage.EditUserModel

<h2 class="mt-5">Edit</h2>
<p>Change your username or password.</p>
<hr/>

<form asp-controller="Manage" asp-action="EditUser" asp-antiforgery="true">
    <input asp-for="UserId"/>
    <div class="row form-group">
        <div class="col-4 col-xs-12">
            <label asp-for="UserName" class="form-control-label"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-12">
            <label class="custom-control custom-checkbox">
                <input asp-for="WithPasswordChange" class="custom-control-input toggle-display" data-toogle-display-target="#change-password-info" />
                <span asp-for="WithPasswordChange" class="custom-control-indicator"></span>
                <label asp-for="WithPasswordChange" class="custom-control-description"></label>
            </label>
        </div>
    </div>
    <div id="change-password-info" @(Model.WithPasswordChange ? "" : "style=display:none")>
        <div class="row form-group">
            <div class="col-4 col-xs-12">
                <label asp-for="CurrentPassword" class="form-control-label"></label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-4 col-xs-12">
                <label asp-for="NewPassword" class="form-control-label"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-4 col-xs-12">
                <label asp-for="NewPasswordRepeat" class="form-control-label"></label>
                <input asp-for="NewPasswordRepeat" class="form-control" />
                <span asp-validation-for="NewPasswordRepeat"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-outline-success">Submit</button>
    </div>
</form>